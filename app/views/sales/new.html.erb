<h1>Sales</h1>
<p>Find me in app/views/sales/new.html.erb</p>
<div class="container">
<div class="form-group col col-3">
<%= form_with model: Sale.new, local: true do |f| %>
  <%= f.label :cod %>
  <%= f.number_field :cod, id: :cod %>
</div>
<div class="form-group col col-3">
  <%= f.label :detail %>
  <%= f.text_area :detail, id: :detail %>
</div>
<div class="form-group col col-3">
  <%= f.label :category %>
  <%= f.text_field :category, id: :category %>
</div>
<div class="form-group col col-3">
  <%= f.label :value %>
  <%= f.number_field :value, id: :value %>
</div>
<div class="form-group col col-3">
  <%= f.label :discount %>
  <%= f.number_field :discount, id: :discount %>
</div>
<div class="form-group col col-3">
  <%= f.label :tax %>
  <%= f.check_box :tax, id: :tax %>
  </div>
  <%= f.submit "Enviar", class:'btn btn-warning' %>
<% end %>
</div>
