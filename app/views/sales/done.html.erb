<h2>Sales</h2>
<div class="container">
<table class="table table-dark">
<thead>
    <tr>
      <th scope="col">Cod</th>
      <th scope="col">Detail</th>
      <th scope="col">Category</th>
      <th scope="col">Value</th>
      <th scope="col">Discount</th>
      <th scope="col">Tax</th>
      <th scope="col">Total</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.cod %></td>
        <td><%= sale.detail %></td>
        <td><%= sale.category %></td>
        <td><%= sale.value %></td>
        <td><%= sale.discount %></td>
        <td><%= sale.tax %></td>
        <td><%= sale.total %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>
<%= link_to 'Back', sales_new_path, class: 'btn btn-warning' %>
